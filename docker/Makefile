NAME         := 1999.test  ## Deploy Name ------------------ 1999.test $(NAME)
PORT         := 8080:8000  ## Port Mapping ----------------- 8080:8000 $(PORT)

NAME := $(strip $(NAME))
PORT := $(strip $(PORT))

.PHONY: dev prod .linn

##: ----------------------------------------------------------------------------
help: #|Â° SHOW THIS HELP Â°||||||||||||||||||||||||||||||||||||||||||||||||||||||
##: ----------------------------------------------------------------------------
	@make .linn .nl
	@grep -hE '^[A-Za-z0-9_ \-]*?:.*##.*$$' $(MAKEFILE_LIST) \
	| awk 'BEGIN {FS=":.*?##"};{printf "%3s\033[36m%-13s\033[0m%s\n","",$$1,$$2}'
	@make .nl .linn
##: ----------------------------------------------------------------------------

##: make $(dev|prod) distinctions
DEV := $(filter dev, $(MAKECMDGOALS))
PRO := $(filter prod, $(MAKECMDGOALS))

##: adjust name
NAME := $(if $(DEV),$(NAME).dev,$(NAME))
NAME := $(if $(PRO),$(NAME).prod,$(NAME))

##: build target
TG := $(DEV)$(PRO)

##: Dockerfile prefix
.P := $(if $(DEV),dev.,dev.)
.P := $(if $(PRO),prod.,dev.)

dev:; @make .linn; echo ğŸ‹ DEVELOPMENT
prod:; @make .linn; echo ğŸ¦  PRODUCTION
pro: .linn; @echo "â›ºï¸ USE: prod"; make .linn; exit 69

:##
##: ----------------------------------------------------------------------------
##: MAIN Â°||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||
##: ----------------------------------------------------------------------------

build::; @make .linn ## ğŸ”˜ docker build		(dev|prod) Dockerfile
build::
	cd ..; docker build -f ./docker/$(.P)Dockerfile -t $(NAME) .

build::; @make .linn
	@docker images --format "{{.ID}}\t{{.Size}}\t{{.Repository}}" | head -n 5

:##
##: --------------------------------------------------------

runa:; @make .linn ## ğŸ¬ docker run attached		(dev|prod) Image
	docker run --rm -p $(PORT) --name $(NAME) $(NAME)

run:; @make .linn ## ğŸ¬ docker run			(dev|prod) Image
	docker run --rm -d -p $(PORT) --name $(NAME) $(NAME)

:##
##: --------------------------------------------------------

log:; @make .linn ## ğŸ‹ docker logs			(dev|prod) Container
	docker logs --follow $(NAME)

:##
##: --------------------------------------------------------

stop:; @make .linn ## ğŸ¡ docker stop			(dev|prod) Container
	docker stop $(NAME) $(NAME)

.stopa:; @make .linn ## ğŸ¡ docker stop all running
	docker stop $(shell docker ps -a -q)

:##
##: --------------------------------------------------------

rm:; @make .linn ## ğŸ™ docker rm			(dev|prod) Container
	docker rm $(NAME) --force

rmi:; @make .linn ## ğŸ™ docker rmi			(dev|prod) Image
	docker rmi $(NAME)

.rmid:; @make .linn ## ğŸ™ docker rmi dangling
	docker rmi $(docker images -f "dangling=true" -q)

:##
##: --------------------------------------------------------

.sh:; @make .linn ## ğŸ§ docker exec sh		(dev|prod) Container
	docker exec -it $(NAME) sh

bash:; @make .linn ## ğŸ§ docker exec bash		(dev|prod) Container
	docker exec -it $(NAME) bash

aux:; @make .linn ## ğŸ§ docker exec ps aux		(dev|prod) Container
	docker exec -it $(NAME) ps aux

ls:; @make .linn ## ğŸ§ docker exec ls -lA		(dev|prod) Container
	docker exec -it $(NAME) ls -lA

:##
:## â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

re: ## ğŸ  Build Results (ls) 		(dev|prod) @ temp
	@make build $(TG) NAME=1999.temp
	@-make run $(TG) NAME=1999.temp PORT=9999:8000
	@-make ls $(TG) NAME=1999.temp
	@-make stop $(TG) NAME=1999.temp
	@make rmi $(TG) NAME=1999.temp

.ret: ## ğŸ  Build Results (test)	(dev|prod) @ temp
	@make build $(TG) NAME=1999.temp
	@-make run $(TG) NAME=1999.temp PORT=9999:8000
	@-make ls $(TG) NAME=1999.temp
	@-make test-t $(TG) NAME=1999.temp
	@-make stop $(TG) NAME=1999.temp
	@make rmi $(TG) NAME=1999.temp

:## --------------------------------------------------------

ifneq ($(TG),prod)

test: ## ğŸ  Test Results		(.|dev) @ temp
	@make build $(TG) NAME=1999.temp
	@-make run $(TG) NAME=1999.temp PORT=9999:8000
	@-make test-c $(TG) NAME=1999.temp
	@-make test-n $(TG) NAME=1999.temp
	@-make stop $(TG) NAME=1999.temp
	@make rmi $(TG) NAME=1999.temp

else
test: .nt
endif

:## â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
:##

ifneq ($(TG),prod)

test-t:; @make .linn ## ğŸ§ docker exec npm test	(.|dev)
	docker exec $(NAME) npm test

test-c:; @make .linn ## ğŸ§ docker exec npm test:c	(.|dev)
	docker exec $(NAME) npm run test:c

test-n:; @make .linn ## ğŸ§ docker exec npm newman	(.|dev)
	docker exec $(NAME) npm run newman

else
test-t: .nt
test-c: .nt
test-n: .nt
endif

:##
##: --------------------------------------------------------

ps: .linn ## ğŸ”˜ List of Containers ----------------------------------
	@docker ps -a --format \
	"{{.ID}}\t{{.Names}}\t{{.Status}}" | head -n 10

li: .linn ## ğŸ”˜ List of Images --------------------------------------
	@docker images --format \
	"{{.ID}}\t{{.Size}}\t{{.Repository}}" | head -n 10

he: .linn # ğŸ”˜ Usage Help ------------------------------------------
	@printf "\n\
	%18s#: aliases\n\n\
	%18sâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n\
	%18salias l='ls -l'\n\
	%18salias ll='ls -lA'\n\
	%18salias lr='ls -lAR'\n\
	%18salias px='ps aux'\n\
	%18salias qq='exit'\n\
	"

##: EMPTY TARGETS
##: ----------------------------------------------------------------------------
.et: .linn
	@printf "â›ºï¸ EMPTY TARGET â›ºï¸ make \033[33m(dev|prod)\033[0m <target>\n"

.nt: .linn
	@printf "â›ºï¸ TESTS NOT AVAILABLE â›ºï¸ make \033[33m(prod)\033[0m test\n"

##: ----------------------------------------------------------------------------
##: DECORATION Â°-)) Â°|||||||||||||||||||||||||||||||||||||||||||||||||||||||||||
##: ----------------------------------------------------------------------------
.nl:; @printf "\n"
.line:; @for i in {1..73}; do printf "â”€"; done;
.linn:; @make .line .nl
